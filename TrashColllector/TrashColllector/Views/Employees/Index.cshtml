@model  IEnumerable<TrashColllector.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div>
    <p>@Html.ActionLink("New Employee", "RegisterEmployee", "Account", null, new { @class = "btn btn-default" })</p>
</div>

<table id="employees" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Service Postal Code</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@(employee.ServicePostalCode == null ? "" : employee.ServicePostalCode.Code)</td>
                <td>@Html.ActionLink("Edit", "Edit", "Employee", new { id = employee.UserId }, null)</td>
            </tr>
        }
    </tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#employees").DataTable();
        })
    </script>
}